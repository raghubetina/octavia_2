<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Product category #<%= @product_category.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/product_categories" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link product_category start -->
      <div class="col">
        <a href="/product_categories/<%= @product_category.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit product category
        </a>
      </div>
      <!-- Edit link product_category end -->

      <!-- Delete link product_category start -->
      <div class="col">
        <a href="/delete_product_category/<%= @product_category.id %>" class="btn btn-block btn-outline-secondary">
          Delete product category
        </a>
      </div>
      <!-- Delete link product_category end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @product_category.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@product_category.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@product_category.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "product_category_templates/product_category_products" %>
  </div>
</div>
<!-- Show Page Customization end -->
