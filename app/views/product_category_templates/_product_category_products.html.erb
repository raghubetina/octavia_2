<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Products

    <a data-toggle="collapse" href="#product_category_products_new_form">
      Add product
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @product_category.products.each do |product| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/products/<%= product.id %>">
          <%= product.name %>
        </a>

        <a href="/delete_product_from_product_category/<%= product.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="product_category_products_new_form">
        <%= render partial: "product_category_templates/product_category_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
