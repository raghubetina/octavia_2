<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All product categories
    </h1>

    <a href="/product_categories/new" class="btn btn-block btn-outline-secondary">
      Add a new product category
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "product_category_templates/product_categories_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @product_categories.each do |product_category| %>
      <tr>
        <td>
          <%= product_category.id %>
        </td>

        <td>
          <%= product_category.name %>
        </td>

        <td>
          <%= time_ago_in_words(product_category.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(product_category.updated_at) %> ago
        </td>

        <td>
          <a href="/product_categories/<%= product_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @product_categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
