<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All product categories
    </h1>

    <a href="/product_categories/new" class="btn btn-block btn-outline-secondary">
      Add a new product category
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @product_categories.each do |product_category| %>
      <tr>
        <!-- Display product_category.id start -->
        <td>
          <%= product_category.id %>
        </td>
        <!-- Display product_category.id end -->

        <!-- Display product_category.name start -->
        <td>
          <%= product_category.name %>
        </td>
        <!-- Display product_category.name end -->

        <!-- Display product_category.created_at start -->
        <td>
          <%= time_ago_in_words(product_category.created_at) %> ago
        </td>
        <!-- Display product_category.created_at end -->

        <!-- Display product_category.updated_at start -->
        <td>
          <%= time_ago_in_words(product_category.updated_at) %> ago
        </td>
        <!-- Display product_category.updated_at end -->

        <td>
          <a href="/product_categories/<%= product_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @product_categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
