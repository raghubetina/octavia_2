<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All curl patterns
    </h1>

    <a href="/curl_patterns/new" class="btn btn-block btn-outline-secondary">
      Add a new curl pattern
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "curl_pattern_templates/curl_patterns_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Number
        </th>

        <th>
          Letter
        </th>

        <th>
          Description
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @curl_patterns.each do |curl_pattern| %>
      <tr>
        <td>
          <%= curl_pattern.id %>
        </td>

        <td>
          <%= curl_pattern.number %>
        </td>

        <td>
          <%= curl_pattern.letter %>
        </td>

        <td>
          <%= curl_pattern.description %>
        </td>

        <td>
          <%= curl_pattern.position %>
        </td>

        <td>
          <%= time_ago_in_words(curl_pattern.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(curl_pattern.updated_at) %> ago
        </td>

        <td>
          <a href="/curl_patterns/<%= curl_pattern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @curl_patterns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
