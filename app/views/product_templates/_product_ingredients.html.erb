<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredients

    <a data-toggle="collapse" href="#product_ingredients_new_form">
      Add ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @product.ingredients.each do |ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/ingredients/<%= ingredient.id %>">
          <%= ingredient.product_id %>
        </a>

        <a href="/delete_ingredient_from_product/<%= ingredient.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="product_ingredients_new_form">
        <%= render partial: "product_templates/product_ingredients_new_form" %>
      </div>
    </div>

  </ul>
</div>
