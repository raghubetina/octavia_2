<!-- Form review start -->
<form action="/create_review_from_product" method="post">
<!-- Form review end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control" value="<%= @review.body %>">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @review.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for product_id start -->
  <!-- Input for product_id start -->
  <input type="hidden" name="product_id" value="<%= @product.id %>">
  <!-- Input for product_id end -->

  <!-- Label and input for would_use_again start -->
  <div class="form-group">
    <label for="would_use_again">
      Would use again
    </label>
    <!-- Input for would_use_again start -->
    <input id="would_use_again" class="form-check-input" name="would_use_again" type="checkbox" <%= "checked" if @review.would_use_again %>>
    <!-- Input for would_use_again end -->
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>
