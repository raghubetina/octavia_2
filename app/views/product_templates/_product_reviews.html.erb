<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reviews

    <a data-toggle="collapse" href="#product_reviews_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @product.reviews.each do |review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/reviews/<%= review.id %>">
          <%= review.body %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_review_from_product/<%= review.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="product_reviews_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "product_templates/product_reviews_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
