<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All products
    </h1>

    <a href="/products/new" class="btn btn-block btn-outline-secondary">
      Add a new product
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "product_templates/products_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product category
        </th>

        <th>
          Name
        </th>

        <th>
          Amazon asin
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>

        <td>
          <% if product.product_category.present? %>
            <a href="/product_categories/<%= product.product_category.id %>">
              <%= product.product_category.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= product.name %>
        </td>

        <td>
          <%= product.amazon_asin %>
        </td>

        <td>
          <img src='<%= product.photo %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(product.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(product.updated_at) %> ago
        </td>

        <td>
          <a href="/products/<%= product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @products, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
