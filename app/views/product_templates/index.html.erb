<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All products
    </h1>

    <a href="/products/new" class="btn btn-block btn-outline-secondary">
      Add a new product
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product category
        </th>

        <th>
          Name
        </th>

        <th>
          Amazon asin
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <!-- Display product.id start -->
        <td>
          <%= product.id %>
        </td>
        <!-- Display product.id end -->

        <!-- Display product.product_category_id start -->
        <td>
          <%= product.product_category.name %>
        </td>
        <!-- Display product.product_category_id end -->

        <!-- Display product.name start -->
        <td>
          <%= product.name %>
        </td>
        <!-- Display product.name end -->

        <!-- Display product.amazon_asin start -->
        <td>
          <%= product.amazon_asin %>
        </td>
        <!-- Display product.amazon_asin end -->

        <!-- Display product.photo start -->
        <td>
          <img src='<%= product.photo %>' class='img-fluid'>
        </td>
        <!-- Display product.photo end -->

        <!-- Display product.created_at start -->
        <td>
          <%= time_ago_in_words(product.created_at) %> ago
        </td>
        <!-- Display product.created_at end -->

        <!-- Display product.updated_at start -->
        <td>
          <%= time_ago_in_words(product.updated_at) %> ago
        </td>
        <!-- Display product.updated_at end -->

        <td>
          <a href="/products/<%= product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @products, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
