<%= search_form_for @q, :class => collapse_search_form, :id => "products_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :amazon_asin_cont, "Amazon asin contains" %>
    <%= f.text_field :amazon_asin_cont, :class => "form-control", :placeholder => "Amazon asin contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :reviews_body_cont, "Review body contains" %>
    <%= f.text_field :reviews_body_cont, :class => "form-control", :placeholder => "Review body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :product_category_name_cont, "ProductCategory name contains" %>
    <%= f.text_field :product_category_name_cont, :class => "form-control", :placeholder => "ProductCategory name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :curl_patterns_number_cont, "CurlPattern number contains" %>
    <%= f.text_field :curl_patterns_number_cont, :class => "form-control", :placeholder => "CurlPattern number contains" %>
  </div>

  <div class="form-group">
    <%= f.label :porosities_level_cont, "Porosity level contains" %>
    <%= f.text_field :porosities_level_cont, :class => "form-control", :placeholder => "Porosity level contains" %>
  </div>

  <div class="form-group">
    <%= f.label :densities_level_cont, "Density level contains" %>
    <%= f.text_field :densities_level_cont, :class => "form-control", :placeholder => "Density level contains" %>
  </div>

  <div class="form-group">
    <%= f.label :substances_name_cont, "Substance name contains" %>
    <%= f.text_field :substances_name_cont, :class => "form-control", :placeholder => "Substance name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :users_email_cont, "User email contains" %>
    <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/products" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#products_filters">
  Show filters
</a>
