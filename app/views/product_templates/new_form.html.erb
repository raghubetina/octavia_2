<h1>
  Add a new product
</h1>


<hr>

<!-- Form product start -->
<form action="/create_product" method="post" enctype="multipart/form-data">
<!-- Form product end -->

  <!-- Label and input for product_category_id start -->
  <div class="form-group">
    <label for="product_category_id">
      Product category
    </label>

    <!-- Input for product_category_id start -->
    <%= select_tag(:product_category_id, options_from_collection_for_select(ProductCategory.all, :id, :name, @product.product_category_id), :class => "form-control") %>
    <!-- Input for product_category_id end -->
  </div>
  <!-- Label and input for product_category_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for amazon_asin start -->
  <div class="form-group">
    <label for="amazon_asin">
      Amazon asin
    </label>

    <!-- Input for amazon_asin start -->
    <input type="text" id="amazon_asin" name="amazon_asin" class="form-control">
    <!-- Input for amazon_asin end -->
  </div>
  <!-- Label and input for amazon_asin end -->

  <!-- Label and input for photo start -->
  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <!-- Input for photo start -->
    <input type="file" id="photo" name="photo" class="form-control">
    <!-- Input for photo end -->
  </div>
  <!-- Label and input for photo end -->

  <button class="btn btn-block btn-outline-secondary">
    Create product
  </button>
</form>

<hr>

<a href="/products">
  Go back
</a>
