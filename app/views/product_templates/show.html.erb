<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Product #<%= @product.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/products" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/products/<%= @product.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit product
        </a>
      </div>

      <div class="col">
        <a href="/delete_product/<%= @product.id %>" class="btn btn-block btn-outline-secondary">
          Delete product
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Product category
      </dt>
      <dd>
        <% if @product.product_category.present? %>
          <a href="/product_categories/<%= @product.product_category_id %>">
            <%= @product.product_category.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @product.name %>
      </dd>

      <dt>
        Amazon asin
      </dt>
      <dd>
        <%= @product.amazon_asin %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <img src="<%= @product.photo %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@product.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@product.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

