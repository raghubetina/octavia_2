<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All substances
    </h1>

    <a href="/substances/new" class="btn btn-block btn-outline-secondary">
      Add a new substance
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "substance_templates/substances_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @substances.each do |substance| %>
      <tr>
        <td>
          <%= substance.id %>
        </td>

        <td>
          <%= substance.name %>
        </td>

        <td>
          <%= time_ago_in_words(substance.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(substance.updated_at) %> ago
        </td>

        <td>
          <a href="/substances/<%= substance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @substances, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
