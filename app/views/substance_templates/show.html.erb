<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Substance #<%= @substance.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/substances" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link substance start -->
      <div class="col">
        <a href="/substances/<%= @substance.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit substance
        </a>
      </div>
      <!-- Edit link substance end -->

      <!-- Delete link substance start -->
      <div class="col">
        <a href="/delete_substance/<%= @substance.id %>" class="btn btn-block btn-outline-secondary">
          Delete substance
        </a>
      </div>
      <!-- Delete link substance end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @substance.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@substance.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@substance.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "substance_templates/substance_ingredients" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "substance_templates/substance_products" %>
  </div>
</div>
<!-- Show Page Customization end -->
