<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Substance #<%= @substance.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/substances" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/substances/<%= @substance.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit substance
        </a>
      </div>

      <div class="col">
        <a href="/delete_substance/<%= @substance.id %>" class="btn btn-block btn-outline-secondary">
          Delete substance
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @substance.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@substance.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@substance.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "substance_templates/substance_ingredients" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "substance_templates/substance_products" %>
  </div>
</div>
