<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All age groups
    </h1>

    <a href="/age_groups/new" class="btn btn-block btn-outline-secondary">
      Add a new age group
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "age_group_templates/age_groups_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Range
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @age_groups.each do |age_group| %>
      <tr>
        <td>
          <%= age_group.id %>
        </td>

        <td>
          <%= age_group.range %>
        </td>

        <td>
          <%= age_group.position %>
        </td>

        <td>
          <%= time_ago_in_words(age_group.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(age_group.updated_at) %> ago
        </td>

        <td>
          <a href="/age_groups/<%= age_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @age_groups, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
