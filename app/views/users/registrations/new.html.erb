<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          
          <div class="form-group">
            <% username_was_invalid = resource.errors.include?(:username) %>

            <% username_class = "form-control" %>

            <% if was_validated %>
              <% if username_was_invalid %>
                <% username_class << " is-invalid" %>
              <% else %>
                <% username_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :username %>

            <%= f.text_field :username, :class => username_class, :placeholder => "Enter username" %>

            <% if username_was_invalid %>
              <% resource.errors.full_messages_for(:username).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% curl_pattern_id_was_invalid = resource.errors.include?(:curl_pattern_id) %>

            <% curl_pattern_id_class = "form-control" %>

            <% if was_validated %>
              <% if curl_pattern_id_was_invalid %>
                <% curl_pattern_id_class << " is-invalid" %>
              <% else %>
                <% curl_pattern_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :curl_pattern_id %>

            <%= f.number_field :curl_pattern_id, :class => curl_pattern_id_class, :placeholder => "Enter curl pattern id" %>

            <% if curl_pattern_id_was_invalid %>
              <% resource.errors.full_messages_for(:curl_pattern_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% porosity_id_was_invalid = resource.errors.include?(:porosity_id) %>

            <% porosity_id_class = "form-control" %>

            <% if was_validated %>
              <% if porosity_id_was_invalid %>
                <% porosity_id_class << " is-invalid" %>
              <% else %>
                <% porosity_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :porosity_id %>

            <%= f.number_field :porosity_id, :class => porosity_id_class, :placeholder => "Enter porosity id" %>

            <% if porosity_id_was_invalid %>
              <% resource.errors.full_messages_for(:porosity_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% density_id_was_invalid = resource.errors.include?(:density_id) %>

            <% density_id_class = "form-control" %>

            <% if was_validated %>
              <% if density_id_was_invalid %>
                <% density_id_class << " is-invalid" %>
              <% else %>
                <% density_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :density_id %>

            <%= f.number_field :density_id, :class => density_id_class, :placeholder => "Enter density id" %>

            <% if density_id_was_invalid %>
              <% resource.errors.full_messages_for(:density_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% age_group_id_was_invalid = resource.errors.include?(:age_group_id) %>

            <% age_group_id_class = "form-control" %>

            <% if was_validated %>
              <% if age_group_id_was_invalid %>
                <% age_group_id_class << " is-invalid" %>
              <% else %>
                <% age_group_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :age_group_id %>

            <%= f.number_field :age_group_id, :class => age_group_id_class, :placeholder => "Enter age group id" %>

            <% if age_group_id_was_invalid %>
              <% resource.errors.full_messages_for(:age_group_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
