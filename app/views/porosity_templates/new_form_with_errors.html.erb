<% if @porosity.present? %>
  <% if @porosity.errors.any? %>
    <% @porosity.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new porosity
</h1>


<hr>

<form action="/create_porosity" method="post">

  <div class="form-group">
    <label for="level">
      Level
    </label>

    <input type="text" id="level" name="level" class="form-control" value="<%= @porosity.level %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @porosity.description %></textarea>
  </div>

  <div class="form-group">
    <label for="position">
      Position
    </label>

    <input type="text" id="position" name="position" class="form-control" value="<%= @porosity.position %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create porosity
  </button>
</form>

<hr>

<a href="/porosities">
  Go back
</a>
