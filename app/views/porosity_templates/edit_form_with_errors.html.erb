<!-- Validation failure messages -->
<% if @porosity.errors.any? %>
  <% @porosity.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit porosity #<%= @porosity.id %>
</h1>

<hr>

<!-- Form porosity start -->
<form action="/update_porosity/<%= @porosity.id %>" method="post">
<!-- Form porosity end -->

  <!-- Label and input for level start -->
  <div class="form-group">
    <label for="level">
      Level
    </label>

    <!-- Input for level start -->
    <input type="text" id="level" name="level" class="form-control" value="<%= @porosity.level %>">
    <!-- Input for level end -->
  </div>
  <!-- Label and input for level end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @porosity.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for position start -->
  <div class="form-group">
    <label for="position">
      Position
    </label>

    <!-- Input for position start -->
    <input type="text" id="position" name="position" class="form-control" value="<%= @porosity.position %>">
    <!-- Input for position end -->
  </div>
  <!-- Label and input for position end -->

  <button class="btn btn-block btn-outline-secondary">
    Update porosity
  </button>
</form>

<hr>

<a href="/porosities">
  Go back
</a>
