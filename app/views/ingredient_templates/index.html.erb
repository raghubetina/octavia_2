<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ingredients
    </h1>

    <a href="/ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new ingredient
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "ingredient_templates/ingredients_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product
        </th>

        <th>
          Substance
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td>
          <%= ingredient.id %>
        </td>

        <td>
          <% if ingredient.product.present? %>
            <a href="/products/<%= ingredient.product.id %>">
              <%= ingredient.product.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if ingredient.substance.present? %>
            <a href="/substances/<%= ingredient.substance.id %>">
              <%= ingredient.substance.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(ingredient.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredients/<%= ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
