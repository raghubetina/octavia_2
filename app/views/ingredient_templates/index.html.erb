<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ingredients
    </h1>

    <a href="/ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product
        </th>

        <th>
          Substance
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <!-- Display ingredient.id start -->
        <td>
          <%= ingredient.id %>
        </td>
        <!-- Display ingredient.id end -->

        <!-- Display ingredient.product_id start -->
        <td>
          <%= ingredient.product_id %>
        </td>
        <!-- Display ingredient.product_id end -->

        <!-- Display ingredient.substance_id start -->
        <td>
          <%= ingredient.substance_id %>
        </td>
        <!-- Display ingredient.substance_id end -->

        <!-- Display ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(ingredient.created_at) %> ago
        </td>
        <!-- Display ingredient.created_at end -->

        <!-- Display ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(ingredient.updated_at) %> ago
        </td>
        <!-- Display ingredient.updated_at end -->

        <td>
          <a href="/ingredients/<%= ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
