<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Ingredient #<%= @ingredient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ingredients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link ingredient start -->
      <div class="col">
        <a href="/ingredients/<%= @ingredient.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit ingredient
        </a>
      </div>
      <!-- Edit link ingredient end -->

      <!-- Delete link ingredient start -->
      <div class="col">
        <a href="/delete_ingredient/<%= @ingredient.id %>" class="btn btn-block btn-outline-secondary">
          Delete ingredient
        </a>
      </div>
      <!-- Delete link ingredient end -->
    </div>

    <dl>
      <dt>
        Product
      </dt>
      <!-- Display product_id start -->
      <dd>
        <% if @ingredient.product.present? %>
          <a href="/products/<%= @ingredient.product_id %>">
            <%= @ingredient.product.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display product_id end -->

      <dt>
        Substance
      </dt>
      <!-- Display substance_id start -->
      <dd>
        <% if @ingredient.substance.present? %>
          <a href="/substances/<%= @ingredient.substance_id %>">
            <%= @ingredient.substance.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display substance_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@ingredient.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@ingredient.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

